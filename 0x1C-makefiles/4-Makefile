CC = gcc
CFLAGS = -Wall -Werror -Wextra -pedantic
SRC = main.c school.c
NAME = school
OBJ = $(SRC:.c=.o)
RM = rm -f

all: $(NAME)

$(NAME): $(OBJ)
        $(CC) $(OBJ) -o $(NAME)

%.o: %.c
        $(CC) $(CFLAGS) -c $< -o $@

clean:
	$(RM) $(NAME) $(OBJ) *~

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: fclean all
